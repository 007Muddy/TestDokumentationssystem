<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Dokumentationssystem.Converters"
             x:Class="Dokumentationssystem.Views.FullImagePage">

    <ContentPage.Resources>
        <ResourceDictionary>
            <local:Base64ToImageConverter x:Key="Base64ToImageConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout>
        <!-- Full-screen image -->
        <Image Source="{Binding Base64Image, Converter={StaticResource Base64ToImageConverter}}" 
               Aspect="AspectFit"
               VerticalOptions="FillAndExpand" 
               HorizontalOptions="FillAndExpand" />
    </StackLayout>
</ContentPage>
