<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dokumentationssystem.Views.PhotoRatingPage"
             Title="Rate Photo">

    <VerticalStackLayout Padding="20" Spacing="10">
        <Image x:Name="PhotoImage" WidthRequest="200" HeightRequest="200" />
        <Picker x:Name="RatingPicker">
            <!-- Add rating options here -->
        </Picker>
        <Editor x:Name="RatingDescriptionEditor" Placeholder="Add description" />
        <Button Text="Save Rating" Clicked="OnSaveRatingClicked" />
    </VerticalStackLayout>
</ContentPage>
