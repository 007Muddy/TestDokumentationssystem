<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dokumentationssystem.Views.CreateInspectionPage"
             Title="Create Inspection">
    <VerticalStackLayout Padding="30">
        <!-- ReadOnly CreatedBy Entry -->
        <Entry x:Name="CreatedByEntry" Placeholder="Created By" IsReadOnly="True" />

        <!-- Inspection Name Entry -->
        <Entry x:Name="InspectionNameEntry" Placeholder="Inspection Name" />

        <!-- Address Entry -->
        <Entry x:Name="AddressEntry" Placeholder="Address" />

        <!-- DatePicker (Date Only) -->
        <DatePicker x:Name="InspectionDatePicker" Format="D" />

        <!-- Button to create inspection -->
        <Button Text="Create Inspection" Clicked="OnCreateInspectionClicked" />
    </VerticalStackLayout>
</ContentPage>
