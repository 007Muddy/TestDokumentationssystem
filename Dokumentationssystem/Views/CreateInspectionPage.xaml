<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dokumentationssystem.Views.CreateInspectionPage"
             Title="Create Inspection">
    <Grid Padding="30" BackgroundColor="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Text="Create New Inspection" 
               FontSize="24" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               VerticalOptions="Start"
               TextColor="#333"/>

        <VerticalStackLayout Grid.Row="1" Spacing="15" Padding="10">
            <Entry x:Name="CreatedByEntry" Placeholder="Created By" IsReadOnly="True" BackgroundColor="White" TextColor="Black" />

            <Entry x:Name="InspectionNameEntry" Placeholder="Inspection Name" BackgroundColor="White"  TextColor="Black"/>

            <Entry x:Name="AddressEntry" Placeholder="Address" BackgroundColor="White" TextColor="Black" />

            <DatePicker x:Name="InspectionDatePicker" Format="D" BackgroundColor="White" TextColor="Black" />

            <Button Text="Create Inspection" 
                    BackgroundColor="#007AFF" 
                    TextColor="White" 
                    CornerRadius="8"
                    FontSize="18"
                    Clicked="OnCreateInspectionClicked" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
