<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dokumentationssystem.Views.CreateInspectionPage"
             BackgroundImageSource="create.jpg">
    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False" />
    </Shell.BackButtonBehavior>
    <Grid Padding="30" BackgroundColor="#80000000">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Button Text="← Back" 
                FontAttributes="Bold" 
                BackgroundColor="#007AFF" 
                TextColor="White" 
                CornerRadius="20"
                Padding="12"
                FontSize="18"
                Clicked="OnBackButtonClicked"
                HorizontalOptions="Start" 
                VerticalOptions="Start"
                Margin="0,10,0,10" />

        <Label Grid.Row="1"
               Text="Create New Inspection" 
               FontSize="28" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               VerticalOptions="Start"
               TextColor="White"
               Margin="0, 20, 0, 20"/>

        <ScrollView Grid.Row="2">
            <VerticalStackLayout Spacing="20" Padding="10" HorizontalOptions="Center">

                <Frame BackgroundColor="#FFFFFFDD" CornerRadius="10" Padding="10" HasShadow="True">
                    <Entry x:Name="CreatedByEntry" Placeholder="Created By" IsReadOnly="True" BackgroundColor="Transparent" TextColor="Black" />
                </Frame>

                <Frame BackgroundColor="#FFFFFFDD" CornerRadius="10" Padding="10" HasShadow="True">
                    <Entry x:Name="InspectionNameEntry" Placeholder="Inspection Name" BackgroundColor="Transparent" TextColor="Black"/>
                </Frame>

                <Frame BackgroundColor="#FFFFFFDD" CornerRadius="10" Padding="10" HasShadow="True">
                    <Entry x:Name="AddressEntry" Placeholder="Address" TextChanged="OnAddressTextChanged" BackgroundColor="Transparent" TextColor="Black" />
                </Frame>


                <ListView x:Name="AddressSuggestionsList" IsVisible="False" ItemSelected="OnAddressSuggestionSelected"
                          BackgroundColor="#FFFFFFDD" SeparatorColor="#CCCCCC">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding .}" TextColor="#333333" />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <Frame BackgroundColor="#FFFFFFDD" CornerRadius="10" Padding="10" HasShadow="True">
                    <DatePicker x:Name="InspectionDatePicker" Format="D" BackgroundColor="Transparent" TextColor="Black" />
                </Frame>

                <Button Text="Create Inspection"
                        BackgroundColor="#007AFF"
                        TextColor="White"
                        CornerRadius="10"
                        FontSize="18"
                        HeightRequest="50"
                        WidthRequest="250"
                        HorizontalOptions="Center"
                        Clicked="OnCreateInspectionClicked" />
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
