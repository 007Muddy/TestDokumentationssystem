<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dokumentationssystem.Views.CreateInspectionPage"
             Title="Create Inspection">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Create a New Inspection" FontSize="24" HorizontalOptions="Center" />
        <Entry x:Name="InspectionNameEntry" Placeholder="Inspection Name" />
        <Entry x:Name="AddressEntry" Placeholder="Address" />
        <DatePicker x:Name="InspectionDatePicker" />
        <Button Text="Save Inspection" Clicked="OnSaveInspectionClicked" />
    </VerticalStackLayout>
</ContentPage>
