<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dokumentationssystem.Views.InspectionListPage"
             Title="Inspections">
    <VerticalStackLayout Padding="30">
        <ListView x:Name="InspectionListView" ItemTapped="OnInspectionSelected">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <!-- Display Inspection Name, Date, and CreatedBy -->
                    <TextCell Text="{Binding InspectionName}" 
                              Detail="{Binding Date, StringFormat='Date: {0:MM/dd/yyyy} | Created By: {Binding CreatedBy}'}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>
