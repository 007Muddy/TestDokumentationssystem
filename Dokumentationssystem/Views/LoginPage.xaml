<?xml version="1.0" encoding="utf-8" ?>
    
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dokumentationssystem.Views.LoginPage"
             Title="Login">

    <Grid Padding="30" BackgroundColor="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Text="Login" 
               FontSize="24" 
               FontAttributes="Bold" 
               HorizontalOptions="Center" 
               VerticalOptions="Start" 
               TextColor="#333"/>

        <VerticalStackLayout Grid.Row="1" Spacing="20" Padding="10">
            <Entry x:Name="UsernameEntry" Placeholder="Enter Username" BackgroundColor="White"  TextColor="Black"/>

            <Entry x:Name="PasswordEntry" Placeholder="Enter Password" IsPassword="True" BackgroundColor="White" TextColor="Black" />

            <Button Text="Login" 
                    BackgroundColor="#007AFF" 
                    TextColor="White" 
                    CornerRadius="8"
                    FontSize="18"
                    Clicked="OnLoginClicked" />
        </VerticalStackLayout>
    </Grid>
</ContentPage>
