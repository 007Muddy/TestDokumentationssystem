<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Dokumentationssystem.Views.SeeOrCreateNewInspection"
             Title="Welcome to inspectoin center">
    <Grid Padding="30" BackgroundColor="#F0F0F0" VerticalOptions="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Text="Please choose an option:" 
           FontSize="24" 
           FontAttributes="Bold" 
           HorizontalOptions="Center" 
           VerticalOptions="Start"
           TextColor="#333"/>

        <VerticalStackLayout Grid.Row="1" Spacing="20" HorizontalOptions="Center" VerticalOptions="Center">
            <Button Text="Inspectoin's list " 
                BackgroundColor="#007AFF" 
                TextColor="White" 
                CornerRadius="8"
                FontSize="18"
                WidthRequest="160"
                Clicked="OnInspectoinListClicked"/>

            <Button Text="Create new inspection" 
                BackgroundColor="#34C759" 
                TextColor="White" 
                CornerRadius="8"
                FontSize="18"
                WidthRequest="215"
                Clicked="OnCreateNewInspectionClicked"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
